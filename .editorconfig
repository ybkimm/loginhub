root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{js,ts,jsx,tsx,json,yaml}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2
